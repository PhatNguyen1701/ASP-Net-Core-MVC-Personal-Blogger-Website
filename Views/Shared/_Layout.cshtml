<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>@ViewBag.Title</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/font-awesome.min.css">

        <!-- Main css -->
        <link rel="stylesheet" href="~/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Lora|Merriweather:300,400" rel="stylesheet">
    </environment>

    <environment include="Production">
        <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/font-awesome.min.css">

        <!-- Main css -->
        <link rel="stylesheet" href="~/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Lora|Merriweather:300,400" rel="stylesheet">
    </environment>

</head>
<body>

    <!-- PRE LOADER -->

    <div class="preloader">
        <div class="sk-spinner sk-spinner-wordpress">
            <span class="sk-inner-circle"></span>
        </div>
    </div>

    <!-- Navigation section  -->

    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Dyred</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>
                        <div class="dropdown">
                            <button class="dropbtn">Categories</button>
                            <div class="dropdown-content">
                                <a asp-controller="Home" asp-action="Index" asp-route-category="Travel">Travel</a>
                                <a asp-controller="Home" asp-action="Index" asp-route-category="Daily">Daily</a>
                                <a asp-controller="Home" asp-action="Index" asp-route-category="Story">Story</a>
                                <a asp-controller="Home" asp-action="Index" asp-route-category="Tips">Tips</a>
                                <a asp-controller="Home" asp-action="Index" asp-route-category="Shopping">Shopping</a>
                            </div>
                        </div>
                    </li>
                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-controller="Home" asp-action="Gallery">Gallery</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a asp-controller="Panel" asp-action="Index">Admin Panel</a></li>
                        }

                        <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Auth" asp-action="Login">Sign In</a></li>
                    }
                </ul>
            </div>

        </div>
    </div>

    <!-- Render Section -->

    <section>
        @RenderBody()
    </section>

    <!-- Footer Section -->

    <footer>
        <div class="container">
            <div class="row">

                <div class="col-md-5 col-md-offset-1 col-sm-6">
                    <h3>Blogger Website</h3>
                    <p>Thanks the owner that was allow me using this template for study purpose</p>
                    <div class="footer-copyright">
                        <p>Copyright &copy; 2017 Your Company - Design: Tooplate</p>
                    </div>
                </div>

                <div class="col-md-4 col-md-offset-1 col-sm-6">
                    <h3>Talk to us</h3>
                    <p><i class="fa fa-globe"></i> N/A</p>
                    <p><i class="fa fa-phone"></i> xxx-yyyy-zzz</p>
                    <p><i class="fa fa-save"></i> info@company.com</p>
                </div>

                <div class="clearfix col-md-12 col-sm-12">
                    <hr>
                </div>

                <div class="col-md-12 col-sm-12">
                    <ul class="social-icon">
                        <li><a href="#" class="fa fa-facebook"></a></li>
                        <li><a href="#" class="fa fa-twitter"></a></li>
                        <li><a href="#" class="fa fa-google-plus"></a></li>
                        <li><a href="#" class="fa fa-dribbble"></a></li>
                        <li><a href="#" class="fa fa-linkedin"></a></li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>

    <!-- Back top -->
    <a href="#back-top" class="go-top"><i class="fa fa-angle-up"></i></a>

    <!-- SCRIPTS -->

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/particles.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/jquery.parallax.js"></script>
    <script src="~/js/smoothscroll.js"></script>
    <script src="~/js/custom.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
