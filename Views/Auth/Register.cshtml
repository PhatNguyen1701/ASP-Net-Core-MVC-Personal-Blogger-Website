@model RegisterViewModel

@{

}

<body class="align">

    <div class="grid">

        <form asp-controller="Auth" asp-action="Register" method="post" class="form login">

            <div class="form__field">
                <label for="register__username"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg><span class="hidden">Username</span></label>
                <input asp-for="Email" id="email" type="text" name="email" class="form__input" placeholder="Username" required>
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form__field">
                <label for="register__password"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg><span class="hidden">Password</span></label>
                <input asp-for="Password" id="register__password" type="password" name="password" class="form__input" placeholder="Password" required>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form__field">
                <label for="register__confirmpassword"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg><span class="hidden">Confirm Password</span></label>
                <input asp-for="ConfirmPassword" id="register__confirmpassword" type="password" name="confirmpassword" class="form__input" placeholder="Confirm Password" required>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form__field">
                <input type="submit" value="Sign Up">
            </div>

        </form>

        <p class="text--center">Already have an account? <a asp-controller="Auth" asp-action="Login">Sign in</a></p>

    </div>
</body>